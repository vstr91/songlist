<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="botao" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/rounded_corner_button</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="botaoPrincipal" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/rounded_corner_button_principal</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:colorBackground">@color/colorAccent</item>
    </style>

</resources>
